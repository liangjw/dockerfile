{
  "kind": "Deployment",
  "apiVersion": "extensions/v1beta1",
  "metadata": {
    "name": "hwyg",
    "namespace": "kube-system",
    "labels": {
      "k8s-app": "hwyg"
    }
  },
  "spec": {
    "replicas": 1,
    "selector": {
      "matchLabels": {
        "k8s-app": "hwyg"
      }
    },
    "template": {
      "metadata": {
        "name": "hwyg",
        "labels": {
          "k8s-app": "hwyg"
        }
      },
      "spec": {
        "containers": [
          {
            "name": "tomcat",
            "image": "tomcat:7",
            "resources": {},
            "terminationMessagePath": "/dev/termination-log",
            "terminationMessagePolicy": "File",
            "imagePullPolicy": "IfNotPresent",
            "securityContext": {
              "privileged": false,
              "procMount": "Default"
            },
            "ports":
              [{ "containerPort": 8080, 
                "targetPort": 8080,
                "NodePort":31883
              }],
              "volumeMounts":[
                  {"mountPath":"/var/run/",
                   "name":"docker"
                  }
              ]
          }
        ],
        "volumes":[{
           "name": "docker",
           "hostPath": {
               "path":"/var/run/"
           }
        }],
        "type": "NodePort",
        "restartPolicy": "Always",
        "terminationGracePeriodSeconds": 30,
        "dnsPolicy": "ClusterFirst",
        "securityContext": {},
        "schedulerName": "default-scheduler"
      }
    },
    "strategy": {
      "type": "RollingUpdate",
      "rollingUpdate": {
        "maxUnavailable": "25%",
        "maxSurge": "25%"
      }
    },
    "revisionHistoryLimit": 10,
    "progressDeadlineSeconds": 600
  }
}
